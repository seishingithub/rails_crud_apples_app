<h2>Add Apple</h2>

<form action="/apples" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

  <p>
    <label for="type_of_apple" class="form-label">Type of Apple</label>
    <input name="apple[type_of_apple]" id="type_of_apple">
  </p>

  <p>
    <label for="apple_quality">Apple Quality</label>
    <input name="apple[apple_quality]" id="apple_quality">
  </p>

  <p>
    <input type="submit" value="Create Apple" class="form-button">
  </p>
  </form>